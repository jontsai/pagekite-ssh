#!/bin/sh

KITECONFIG=${SNAP_DATA}/pagekite.rc

KITENAME=`snapctl get kitename`
KITESECRET=`snapctl get kitesecret`

echo "# Built by config hook" > ${KITECONFIG}
echo "kitename   = ${KITENAME}"   >> ${KITECONFIG}
echo "kitesecret = ${KITESECRET}" >> ${KITECONFIG}
echo "service_on=raw-22:@kitename :localhost:22 : @kitesecret" >> ${KITECONFIG}
echo "savefile = ${KITECONFIG}" >> ${KITECONFIG}
echo "END" >> ${KITECONFIG}
